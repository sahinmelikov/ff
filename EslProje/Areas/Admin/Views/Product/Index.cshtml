@using EslProje.Models;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model ICollection<Product>



            <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                  <div class="d-flex justify-content-between">

                              <a class="nav-link" asp-area="Admin" asp-controller="Product" asp-action="Create">
              <i class="mdi mdi-grid-large menu-icon"></i>
              <span class="menu-title">Create button</span>
            </a>
                <div class="card-body">
                  <h4 class="card-title">Striped Table</h4>
                  <p class="card-description">
                    Add class <code>.table-striped</code>
                  </p>





                  <div class="table-responsive">

                  </div>
                    <table class="table table-striped">
                      <thead>
                        <tr>
                       <th>Name</th>
                       <th>Price</th>
                       <th>Image</th>



                        </tr>
                      </thead>
                      <tbody>

                                  <tr>
                            @foreach (var item in Model)
                            {
                                      <td>

                                        @item.Name
                                          </td> 
                                          <td>

                                    @item.Price
                                          </td>
                                    <td>

                                    <img href="~/admin/@item.ImagePath">
                                    </td>
                                      <td>
                                          <div class="btn-group" role="group" aria-label="Basic outlined example">
                                                 <a type="button" class="btn btn-outline-primary" asp-controller="Product" asp-action="Update" asp-route-Id=@item.Id>Update</a>

                                                     <a type="button" class="btn btn-outline-primary" asp-controller="Product" asp-action="Delete" asp-route-id=@item.Id>Delete</a>
                                         </div>
                                      </td>
                            }
                                  </tr>

                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>